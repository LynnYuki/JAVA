<?xml version="1.0" encoding="gb2312"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee    http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
 <filter>
  <filter-name>CharactorFilter</filter-name>
  <filter-class>filter.CharactorFilter</filter-class>
  <init-param>
   <param-name>encoding</param-name>
   <param-value>utf-8</param-value>
  </init-param>
 </filter>
 <filter>
  <filter-name>replaceFilter</filter-name>
  <filter-class>filter.OutputReplaceFilter</filter-class>
  <init-param>
   <param-name>file</param-name>
   <param-value>/WEB-INF/sensitive.properties</param-value>
  </init-param>
 </filter>
 <filter>
  <filter-name>waterMarkFilter</filter-name>
  <filter-class>filter.WaterMarkFilter</filter-class>
  <init-param>
   <param-name>waterMarkFile</param-name>
   <param-value>/WEB-INF/logo.png</param-value>
  </init-param>
 </filter>
 <filter-mapping>
  <filter-name>replaceFilter</filter-name>
  <url-pattern>*.jsp</url-pattern>
 </filter-mapping>
 <filter-mapping>
  <filter-name>waterMarkFilter</filter-name>
  <url-pattern>*.jpg</url-pattern>
 </filter-mapping>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>Myservlet</servlet-name>
    <servlet-class>Servlet.Myservlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>ServletTest</servlet-name>
    <servlet-class>Servlet.ServletTest</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Myservlet</servlet-name>
    <url-pattern>/Myservlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ServletTest</servlet-name>
    <url-pattern>/ServletTest</url-pattern>
  </servlet-mapping>
